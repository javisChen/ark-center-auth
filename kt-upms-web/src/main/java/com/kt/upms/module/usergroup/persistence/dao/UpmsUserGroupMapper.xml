<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kt.upms.module.usergroup.persistence.dao.UpmsUserGroupMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.kt.upms.module.usergroup.persistence.UpmsUserGroup">
        <result column="id" property="id"/>
        <result column="pid" property="pid"/>
        <result column="level" property="level"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="gmt_modified" property="gmtModified"/>
        <result column="name" property="name"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        gmt_create,
        gmt_modified,
        name
    </sql>
    <select id="selectUserGroupIdsByUserId" resultType="java.lang.Long">
        select uugur.user_group_id
        from upms_user_group_user_rel uugur
        where user_id = #{userId}
    </select>
    <select id="selectUserGroupNamesByUserId" resultType="java.lang.String">
        select uug.name
        from upms_user_group_user_rel uugur
        inner join upms_user_group uug on uug.id = uugur.user_group_id
        where user_id = #{userId}
        and uug.status = 1
        and uug.is_deleted = 0
    </select>

</mapper>
