<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kt.upms.mapper.UpmsPermissionRoleRelMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.kt.upms.entity.UpmsPermissionRoleRel">
        <result column="id" property="id"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="gmt_modified" property="gmtModified"/>
        <result column="permission_id" property="permissionId"/>
        <result column="application_id" property="applicationId"/>
        <result column="type" property="type"/>
        <result column="role_id" property="roleId"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        gmt_create,
        gmt_modified,
        application_id,
        type,
        permission_id, role_id
    </sql>
    <insert id="batchInsert">
        insert into upms_permission_role_rel (application_id, permission_id, role_id, type)
        values
        <foreach collection="permissionIds" item="item" separator=",">
            (#{applicationId}, #{item}, #{roleId}, #{type})
        </foreach>
    </insert>


    <select id="selectRoleNamesByUserId" resultType="java.lang.String">
        select ur.name
        from upms_user_role_rel uurr
        inner join upms_role ur on uurr.role_id = ur.id
        where uurr.user_id = #{userId}
    </select>

</mapper>
