<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kt.upms.mapper.UpmsUserGroupRoleRelMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.kt.upms.entity.UpmsUserGroupRoleRel">
    <result column="id" property="id" />
    <result column="gmt_create" property="gmtCreate" />
    <result column="gmt_modified" property="gmtModified" />
        <result column="user_group_id" property="userGroupId" />
        <result column="role_id" property="roleId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        gmt_create,
        gmt_modified,
        user_group_id, role_id
    </sql>

    <insert id="insertBatch">
        insert into upms_user_group_role_rel(user_group_id, role_id)
        values
        <foreach collection="upmsUserGroupUserRelCollection" item="item" separator=",">
            (#{item.userGroupId,jdbcType=NUMERIC}, #{item.roleId,jdbcType=NUMERIC})
        </foreach>
    </insert>

    <delete id="deleteByRoleIdsAndUserGroupId" >
        delete from upms_user_group_role_rel
        where user_group_id = #{userGroupId}
        and role_id in
        <foreach open="("  close=")" collection="roleIds" item="item" separator=",">
            #{item}
        </foreach>
    </delete>

</mapper>
