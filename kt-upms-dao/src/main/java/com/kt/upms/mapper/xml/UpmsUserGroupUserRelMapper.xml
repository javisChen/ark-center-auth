<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kt.upms.mapper.UpmsUserGroupUserRelMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.kt.upms.entity.UpmsUserGroupUserRel">
        <result column="id" property="id"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="gmt_modified" property="gmtModified"/>
        <result column="user_group_id" property="userGroupId"/>
        <result column="user_id" property="userId"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        gmt_create,
        gmt_modified,
        user_group_id, user_id
    </sql>
    <insert id="insertBatch">
        insert into upms_user_group_user_rel(user_group_id, user_id)
        values
        <foreach collection="upmsUserGroupUserRelCollection" item="item" separator=",">
            (#{item.userGroupId,jdbcType=NUMERIC}, #{item.userId,jdbcType=NUMERIC})
        </foreach>
    </insert>

    <delete id="deleteByUserIdsAndUserGroupId">
        delete from upms_user_group_user_rel
        where user_group_id = #{userGroupId}
        and user_id in
        <foreach open="("  close=")" collection="userIds" item="item" separator=",">
            #{item}
        </foreach>
    </delete>

</mapper>
